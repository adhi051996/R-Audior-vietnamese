<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:minWidth="300dp"
    android:minHeight="400dp"
    android:id="@+id/relsnack"
    android:layout_height="wrap_content">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"

        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ScrollView

            android:layout_weight="1"
            android:id="@+id/scrlbar"
            android:background="#f5f7fa"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="3dp"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/SIR_lin_lay"

                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/welcome_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:text="MSOT INSTRUCTIONS"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/welcome_messgae"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/welcome_title"
                    android:text=""
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@+id/scrlbar">
        <Button
            android:layout_weight="1"
            android:id="@+id/ins_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#520E54"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="7dp"
            android:text="Back" />
        <Button
            android:layout_weight="1"
            android:id="@+id/got_it"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:textColor="#FFFFFF"
            android:background="#520E54"
            android:textStyle="bold"
            android:text="Got It"/>




    </LinearLayout>
</LinearLayout>

