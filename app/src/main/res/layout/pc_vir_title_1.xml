<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    >

    <include layout="@layout/toolbar_category"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#082204"
        android:elevation="3dp"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingLeft="90dp"
        android:textStyle="bold"
        android:paddingRight="90dp"
        android:paddingTop="12dp"
        android:text="Title Page"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <customfonts.TextViewSFProDisplayMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC VIR (Section 1 of 7)"
                android:textSize="19.2sp"
                android:textStyle="bold"
                android:textColor="#E63C06"/>

        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ScrollView

            android:layout_weight="1"
            android:id="@+id/scrlbar"
            android:background="#f5f7fa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="3dp"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="vertical"

                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="#FFF"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:text="Conducted on"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginBottom="18dp"
                            android:background="@drawable/round_border">

                            <EditText
                                android:id="@+id/et_cond_date_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:hint="Tap here to edit"
                                android:inputType="textCapWords|textCapSentences"
                                android:padding="15dp"
                                android:textSize="13dp" />

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="#FFF"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:text="Vehicle number"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginBottom="18dp"
                            android:background="@drawable/round_border">

                            <EditText
                                android:id="@+id/et_client_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:focusable="true"

                                android:focusableInTouchMode="true"
                                android:hint="Tap here to edit"
                                android:inputType="textCapWords|textCapSentences"
                                android:padding="15dp"
                                android:textSize="13dp" />

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="#FFF"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:text="Driver name"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginBottom="18dp"
                            android:background="@drawable/round_border">

                            <EditText
                                android:id="@+id/et_cus_6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:focusable="true"

                                android:focusableInTouchMode="true"
                                android:hint="Tap here to edit"
                                android:inputType="textCapWords|textCapSentences"
                                android:padding="15dp"
                                android:textSize="13dp" />

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="#FFF"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:text="Team"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginBottom="18dp"
                            android:background="@drawable/round_border">

                            <EditText
                                android:id="@+id/et_cont_7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:focusable="true"

                                android:focusableInTouchMode="true"
                                android:hint="Tap here to edit"
                                android:inputType="textCapWords|textCapSentences"
                                android:padding="15dp"
                                android:textSize="13dp" />

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>















            </LinearLayout>



        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"

        android:layout_below="@+id/scrlbar"

        >

        <customfonts.Button_SF_Pro_Display_Semibold
            android:layout_weight="1"
            android:id="@+id/back_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/black_rect"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Back" />
        <customfonts.Button_SF_Pro_Display_Semibold
            android:layout_weight="1"

            android:id="@+id/sub_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginLeft="1dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@drawable/black_rect"
            android:text="NEXT" />


    </LinearLayout>
</LinearLayout>
