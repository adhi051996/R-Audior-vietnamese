<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    >

    <include layout="@layout/toolbar_category"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#082204"
        android:elevation="3dp"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingLeft="90dp"
        android:textStyle="bold"
        android:paddingRight="90dp"
        android:paddingTop="12dp"
        android:text="Other Items (Optional)"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <customfonts.TextViewSFProDisplayMedium
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="PC VIR (Section 7 of 7)"
                android:textColor="#E63C06"
                android:textSize="19.2sp"
                android:textStyle="bold" />

        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ScrollView

            android:layout_weight="1"
            android:id="@+id/scrlbar"
            android:background="#f5f7fa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="3dp"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="vertical"

                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="#FFF"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="Goldben - No unauthorised storage (Max 5 kg)"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/main_rd1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:checked="false"
                            android:gravity="center"
                            android:orientation="vertical">
                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="false"
                                android:gravity="center_vertical"
                                android:text="Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Non-Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="N/A"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />
                        </RadioGroup>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="#FFF"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="Newbait - No unauthorised storage (max 1 kg)"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/main_rd2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:checked="false"
                            android:gravity="center"
                            android:orientation="vertical">
                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="false"
                                android:gravity="center_vertical"
                                android:text="Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Non-Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="N/A"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />
                        </RadioGroup>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="#FFF"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="Contrac Blox (Max 8kg)"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/main_rd3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:checked="false"
                            android:gravity="center"
                            android:orientation="vertical">
                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="false"
                                android:gravity="center_vertical"
                                android:text="Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Non-Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="N/A"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />
                        </RadioGroup>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="#FFF"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="Any Cockroach Gel Bait (Max 2 tube)"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/main_rd4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:checked="false"
                            android:gravity="center"
                            android:orientation="vertical">
                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="false"
                                android:gravity="center_vertical"
                                android:text="Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Non-Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="N/A"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />
                        </RadioGroup>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="#FFF"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="Any Ant Gel Bait (Max 2 tube)"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/main_rd5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:checked="false"
                            android:gravity="center"
                            android:orientation="vertical">
                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="false"
                                android:gravity="center_vertical"
                                android:text="Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Non-Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="N/A"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />
                        </RadioGroup>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="#FFF"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="Anti Malaria Oil (Max 20 litres unless with approval from line manager)"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/main_rd6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:checked="false"
                            android:gravity="center"
                            android:orientation="vertical">
                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="false"
                                android:gravity="center_vertical"
                                android:text="Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Non-Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="N/A"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />
                        </RadioGroup>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="#FFF"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="Rid-Rat or Vertox Soft Bait (Max 2 tubes unless with approval from line manager)"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/main_rd7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:checked="false"
                            android:gravity="center"
                            android:orientation="vertical">
                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="false"
                                android:gravity="center_vertical"
                                android:text="Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Non-Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="N/A"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />
                        </RadioGroup>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="#FFF"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="Sulphur (Max 20 kgs unless with approval from line manager)"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/main_rd8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:checked="false"
                            android:gravity="center"
                            android:orientation="vertical">
                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="false"
                                android:gravity="center_vertical"
                                android:text="Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Non-Complaint"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="N/A"
                                android:textColor="@color/text_color"
                                android:theme="@style/SampleTheme_green" />
                        </RadioGroup>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>



















            </LinearLayout>



        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"

        android:layout_below="@+id/scrlbar"

        >

        <customfonts.Button_SF_Pro_Display_Semibold
            android:layout_weight="1"
            android:id="@+id/back_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/black_rect"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Back" />
        <customfonts.Button_SF_Pro_Display_Semibold
            android:layout_weight="1"

            android:id="@+id/sub_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginLeft="1dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@drawable/black_rect"
            android:text="NEXT" />


    </LinearLayout>
</LinearLayout>
