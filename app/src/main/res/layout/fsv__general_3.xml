                    android:textSize="@dimen/answer_size"
                    android:layout_height="wrap_content"
                    android:text="RADIATOR FLUID"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="400dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="5dp"
                    android:background="#E71103"/>

                <CheckBox
                    android:id="@+id/checkbox_14"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/answer_size"
                    android:layout_height="wrap_content"
                    android:text="WASHER FLUID"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="400dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="5dp"
                    android:background="#E71103"/>

                <CheckBox
                    android:id="@+id/checkbox_15"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/answer_size"
                    android:layout_height="wrap_content"
                    android:text="EMERGENCY HAZARD LIGHT"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="400dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="5dp"
                    android:background="#E71103"/>

                <CheckBox
                    android:id="@+id/checkbox_16"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/answer_size"
                    android:layout_height="wrap_content"
                    android:text="SPARE TYRE"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="400dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="5dp"
                    android:background="#E71103"/>

                <CheckBox
                    android:id="@+id/checkbox_17"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/answer_size"
                    android:layout_height="wrap_content"
                    android:text="VALID HAZMAT TRANSPORT DRIVERPERMIT"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="400dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="5dp"
                    android:background="#E71103"/>

                <CheckBox
                    android:id="@+id/checkbox_18"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/answer_size"
                    android:layout_height="wrap_content"
                    android:text="VALID DRIVING LICENSE"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="400dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="5dp"
                    android:background="#E71103"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remarks"
                    android:textSize="@dimen/heading_size"
                    android:layout_marginLeft="10dp"
                    android:textColor="#073C89"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/round_border">

                    <EditText
                        android:id="@+id/et_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:focusable="true"
                        android:textStyle="bold"
                        android:textColor="@color/edit_text_color"
                        android:focusableInTouchMode="true"
                        android:hint="Tap here to edit"
                        android:inputType="textCapWords|textCapSentences"
                        android:padding="15dp"
                        android:textSize="@dimen/answer_size" />

                </LinearLayout>


            </LinearLayout>



        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"

        android:layout_below="@+id/scrlbar"

        >

        <customfonts.Button_SF_Pro_Display_Semibold
            android:layout_weight="1"
            android:id="@+id/back_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/black_rect"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Back" />
        <customfonts.Button_SF_Pro_Display_Semibold
            android:layout_weight="1"

            android:id="@+id/sub_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginLeft="1dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@drawable/black_rect"
            android:text="NEXT" />


    </LinearLayout>
</LinearLayout>
