<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    >

    <include layout="@layout/toolbar_category"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#082204"
        android:elevation="3dp"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingLeft="90dp"
        android:textStyle="bold"
        android:paddingRight="90dp"
        android:paddingTop="12dp"
        android:text="General Checklist"
        android:textColor="#ffffff"
        android:textSize="@dimen/answer_size" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <customfonts.TextViewSFProDisplayMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FSV (Section 3 of 7)"
                android:textSize="@dimen/heading_size"
                android:textStyle="bold"
                android:textColor="#890F07"/>

        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ScrollView

            android:layout_weight="1"
            android:id="@+id/scrlbar"
            android:background="#f5f7fa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="3dp"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="vertical"

                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check the box if the stated item is in compliance"
                    android:textSize="@dimen/heading_size"
                    android:layout_marginLeft="5dp"
                    android:textColor="#073C89"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold" />



                <CheckBox
                    android:id="@+id/checkbox_1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:text="General cleanliness"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/answer_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <View
                    android:layout_width="400dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="5dp"
                    android:background="#E71103"/>

                <CheckBox
                    android:id="@+id/checkbox_2"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/answer_size"
                    android:layout_height="wrap_content"
                    android:text="SEAT BELT (DRIVER + PASSENGERS)"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <View
                    android:layout_width="400dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="5dp"
                    android:background="#E71103"/>

                <CheckBox
                    android:id="@+id/checkbox_3"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/answer_size"
                    android:layout_height="wrap_content"
                    android:text="TYRES TREAD &amp; PRESSURE"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <View
                    android:layout_width="400dp"
                    android:layout_marginRight="56dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="5dp"
                    android:background="#E71103"/>

                <CheckBox
                    android:id="@+id/checkbox_4"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/answer_size"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="VEHICLE PARTITION"
